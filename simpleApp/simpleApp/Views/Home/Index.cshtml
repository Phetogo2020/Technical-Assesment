@model simpleApp.Models.CustomerViewModel

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
    $('.btnNext').click(function () {
      
        $('.nav-tabs > .active').next('li').find('a').trigger('click');
    });

    $('.btnPrevious').click(function () {
        $('.nav-tabs > .active').prev('li').find('a').trigger('click');
    });
    })
</script>

<div class="container">


    <form class="form-horizontal" asp-controller="Home" asp-action="Create" method="post">
    <ul class="nav nav-tabs">
        <li class="active" ><a data-toggle="tab" href="#menu1">Add Customer-Details</a></li>
                <li><a data-toggle="tab" href="#menu2">Add Customer-Address</a></li>
                <li><a data-toggle="tab" href="#menu3">Add Customer-Comment</a></li>
    </ul>

    <div class="tab-content">
 
      
        
        <div id="menu1" class="tab-pane fade in active">
                    <div class="form-group">
                        
                        <div class="col-sm-10">
                            <label>First Name:</label>
                            <input  asp-for="Name"  type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                      
                        <div class="col-sm-10">
                            <label >Last Name:</label>
                            <input asp-for="Surname" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                       
                        <div class="col-sm-10">
                            <label>Cell phone:</label>
                            <input asp-for="Phone" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-sm-11">
                        <div class="pull-left">
                            <button type="button" class="btn btn-default btnPrevious ">Back</button>
                        </div>

                        <div class="pull-right">
                            <button type="button" class="btn btn-default btnNext">Next</button>
                        </div>
                    </div>

             
        </div>
        <div id="menu2" class="tab-pane fade">
                    <div class="form-group">
                     
                        <div class="col-sm-10">
                            <label>Physical Address</label>
                            <input asp-for="Address1" type="text" class="form-control">
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="Address2" type="text" class="form-control">
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="Address3" type="text" class="form-control">
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="Address4" type="text" class="form-control">
                        </div>

                    </div>
                   
                    <div class="form-group">
                   
                        <div class="col-sm-10">
                                 <label>Postal Address</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                     <div class="form-group">
                       
                        <div class="col-sm-10">
                            <input asp-for="PAddress1" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                       
                        <div class="col-sm-10">
                            <input asp-for="PAddress2" type="text" class="form-control">
                        </div>
                    </div>
                     <div class="form-group">
                 
                        <div class="col-sm-10">
                            <input asp-for="PAddress3" type="text" class="form-control">
                        </div>
                    </div>
                <div class="form-group col-sm-11">
                    <div class="pull-left">
                        <button type="button" class="btn btn-default btnPrevious ">Back</button>
                    </div>

                    <div class="pull-right">
                        <button type="button" class="btn btn-default btnNext">Next</button>
                    </div>
                </div>
        </div>
        <div id="menu3" class="tab-pane fade">
                  
                   <div class="form-group">
                        
                        <div class="col-sm-10">
                            <label class="control-label col-sm-2">Additional Comments</label>
                            <textarea asp-for="Comment" type="text" class="form-control"> </textarea>
                        </div>
                    </div>
                <div class="form-group col-sm-11">
                    <div class="pull-left">
                        <button type="button" class="btn btn-default btnPrevious ">Back</button>
                    </div>

                    <div class="pull-right">
                        <button type="submit" class="btn btn-default btnNext">Submit</button>
                    </div>
                </div>
              
        </div>
    </div>

    
        </form>
    </div>
